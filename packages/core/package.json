{
  "name": "@webgltools/core",
  "version": "1.0.0",
  "description": "Core WebGL debugging and profiling functionality",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lewisgoing/webgl-tools.git",
    "directory": "packages/core"
  },
  "keywords": [
    "webgl",
    "webgl2",
    "debugging",
    "profiling",
    "performance",
    "gpu",
    "graphics"
  ],
  "author": "WebGL Tools Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lewisgoing/webgl-tools/issues"
  },
  "homepage": "https://github.com/lewisgoing/webgl-tools/tree/main/packages/core",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .turbo"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "@types/webgl2": "*"
  },
  "peerDependenciesMeta": {
    "@types/webgl2": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}