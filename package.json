{
  "name": "webgl-tools",
  "version": "1.0.0",
  "private": true,
  "description": "A comprehensive WebGL debugging and profiling toolkit",
  "repository": {
    "type": "git",
    "url": "https://github.com/lewisgoing/webgl-tools.git"
  },
  "keywords": ["webgl", "debugging", "profiling", "three.js", "performance"],
  "author": "WebGL Tools Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lewisgoing/webgl-tools/issues"
  },
  "homepage": "https://github.com/lewisgoing/webgl-tools#readme",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:packages": "turbo run build --filter='./packages/*'",
    "dev": "turbo run dev",
    "dev:playground": "turbo run dev --filter=@webgl-tools/playground...",
    "test": "jest",
    "test:unit": "jest --testMatch='**/__tests__/**/*.test.ts'",
    "test:e2e": "playwright test",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "turbo": "^1.10.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.6.0"
}